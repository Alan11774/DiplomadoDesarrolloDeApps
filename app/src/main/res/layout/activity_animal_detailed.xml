<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ejerciciosclase.ejercicio2.componentesgraficos.list.AnimalDetailedActivity">

    <TextView
        android:id="@+id/tvAnimalName"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ivAnimal"
        app:layout_constraintTop_toBottomOf="@+id/tvAnimalName"
        android:src="@drawable/ic_delete"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <ImageView
            android:id="@+id/ivAnimals"
            app:layout_constraintTop_toBottomOf="@+id/ivAnimal"
            android:src="@drawable/ic_people"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>