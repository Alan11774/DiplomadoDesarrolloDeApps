<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/purpleBackground"
    tools:context=".ejerciciofinal.ShowResultsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- CardView for Error Message -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardErrorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/cardBackgroundColor"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvErrorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Password is incorrect, please try again"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:padding="16dp"
                android:gravity="center"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

        <!-- ImageView for Mew2 when error occurs -->
        <ImageView
            android:id="@+id/imageErrorMew"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/mew2"
            android:scaleType="fitCenter"
            android:layout_marginBottom="24dp"
            android:contentDescription="Error Image Mew"
            android:visibility="gone" />

        <!-- CardView for Unregistered User Error -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardUnregisteredUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/cardBackgroundColor"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvUnregisteredUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The User is not registered, please create an account"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:padding="16dp"
                android:gravity="center"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

        <!-- ImageView for MIU3 when user is not registered -->
        <ImageView
            android:id="@+id/imageUnregisteredMiu"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/mew3"
            android:scaleType="fitCenter"
            android:layout_marginBottom="24dp"
            android:contentDescription="Unregistered User Image MIU3"
            android:visibility="gone" />

        <!-- ImageView for Welcome -->
        <ImageView
            android:id="@+id/imageWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/welcome"
            android:contentDescription="Welcome Image"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />

        <!-- CardView for Email -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardEmailResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/cardBackgroundColor"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvEmailResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Email is: alan@gmail.com"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                android:padding="16dp"
                android:gravity="center"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

        <!-- CardView for Password -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPasswordResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/cardBackgroundColor"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvPasswordResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Password is: 123456"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                android:padding="16dp"
                android:gravity="center"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

        <!-- ImageView for Mew -->
        <ImageView
            android:id="@+id/imageMew"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/mew"
            android:scaleType="fitCenter"
            android:layout_marginBottom="24dp"
            android:contentDescription="Mew Image"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>